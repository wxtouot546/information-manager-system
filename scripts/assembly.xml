<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>assembly</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>target/</directory>
            <outputDirectory>./information-manager-system/</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target/libs</directory>
            <outputDirectory>./information-manager-system/libs/</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>./information-manager-system/config</outputDirectory>
            <includes>
                <include>*.**</include>
            </includes>
            <excludes>
                <exclude>/static**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>./information-manager-system/front-end</outputDirectory>
            <includes>
                <include>/static/**</include>
            </includes>
            <excludes>
                <exclude>*.**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>scripts/</directory>
            <outputDirectory>./information-manager-system/</outputDirectory>
            <filtered>true</filtered>
            <fileMode>0777</fileMode>
            <includes>
                <include>*.sh</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>